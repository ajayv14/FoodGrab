<!DOCTYPE html>
<html lang="en" ng-app="app">
  <head>
    <title>FoodGrab</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="Resource-type" content="Document" />

    <script src="https://code.jquery.com/jquery-3.2.1.js" integrity="sha256-DZAnKJ/6XZ9si04Hgrsxu/8s717jcIzLy3oi35EouyE="  crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.4/angular.js"></script>

    <!-- Latest compiled and minified CSS Bootstrap -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">

    <!-- Optional theme -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap-theme.min.css" integrity="sha384-fLW2N01lMqjakBkx3l/M9EahuwpSfeNvV63J5ezn3uZzapT0u7EYsXMjQV+0En5r" crossorigin="anonymous">
    <script src="../controllers/ng-controller.js" type="text/javascript"></script>

  </head>
  <body ng-controller="orderdetailController">

  <h2>Order Details </h2>

  <nav class="navbar navbar-fixed-top visible-lg visible-md">
    <div class="container-fluid">
      <div class="navbar-header " >
        <a class="navbar-brand"style="font-family: sacramento,cursive; font-size:165%" href="#"><img src="/images/Fighter.png"  Height="80" Width="200">            </a>
      </div>



      <ul class="nav navbar-nav pull-right">
        <li ><a href="/CurrentOrders"><h3><i class="glyphicon glyphicon-home " ></i> Orders</h3></a></li>
        <li ><a href="/OrdersInProgress"><h3><i class="glyphicon glyphicon-fire "></i> In Progress</h3></a></li>
        <li ><a href="/OrdersHistory"><h3><i class="glyphicon glyphicon-time "></i> Order History</h3></a></li>
      </ul>

    </div>

  </nav>




  <div  class="text-center">
    <h2>reference # : {{orderDetail.refNumber}}</h2>

 </div>


  <div class="progress ">
    <div class="progress-bar progress-bar-danger" role="progressbar" style="width:10%">
      NOT CONFIRMED
    </div>
    <div class="progress-bar progress-bar-warning" ng-hide="orderDetail.status=='open'" role="progressbar" style="width:20%">
      CONFIRMED
    </div>
    <div class="progress-bar progress-bar-primary" ng-hide="orderDetail.status=='open'" role="progressbar" style="width:20%">
      In PROGRESS
    </div>
    <div class="progress-bar progress-bar-success" ng-show="orderDetail.status=='closed'"  role="progressbar" style="width:50%">
      COMPLETED
    </div>
  </div>
  </div>



  <div class="">

  <div class="col-sm-3">
   <div class="panel panel-primary ">
     <div class="panel-heading">
       Customer Details
     </div>
     <div class="panel-body">
       <h4>Customer Name : {{orderDetail.customerName}}</h4>
       <h4>Customer Phone : {{orderDetail.customerPhone}}</h4>
       <h4>Customer Address : {{orderDetail.customerAddress}}</h4>
       <h4>Date : {{orderDetail.date | limitTo : 10}}</h4>
       <h4>Time : {{orderDetail.date | limitTo : 5 : 11}}</h4>
     </div>
   </div>


   </div>

    <div class="col-sm-9 pull-right">

  <table  class="table table-inverse " >
      <thead>
      <tr>
        <th>#</th>
        <th>Item</th>
        <th>Quantity</th>
        <th>Special Instructions</th>
        <th>Price</th>
      </tr>
      </thead>

      <tbody>
      <tr scope="row" ng-repeat="item in orderDetail.ordersItems" >

        <td>{{$index+1}}</td>
        <td>{{item.name}}</td>
        <td>{{item.itemQuantity}}</td>
        <td>{{item.specialInstructions}}</td>
        <td>{{item.cost}}</td>
      </tr>
      </tbody>
    </table>


    </div>


   <div class="text-center">
     <button type="button" class="btn btn-default" ng-click="confirmStatus(orderDetail.refNumber)" ng-show="orderDetail.status=='open'"><i class="glyphicon glyphicon-ok"></i> Confirm</button>
     <button type="button" class="btn btn-default" ng-click="completedStatus(orderDetail.refNumber)" ng-show="orderDetail.status=='InProgress'"><i class="glyphicon glyphicon-ok"></i> Completed</button>

   </div>

</div>




  </body>
</html>
